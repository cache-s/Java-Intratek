        </activity>
        <activity
            android:name=".Grades"
            android:label="@string/title_activity_grades"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Projects"
            android:label="@string/title_activity_projects"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Messages"
            android:label="@string/title_activity_messages"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Disconnect"
            android:label="@string/title_activity_disconnect"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
